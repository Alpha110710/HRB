<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y10"
            android:layout_marginTop="@dimen/y10"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_trading_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x5"
                android:layout_marginRight="@dimen/x5"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="融资金额进账"
                android:textColor="@color/font_black" />

            <TextView
                android:id="@+id/tv_item_trading_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x5"
                android:layout_marginRight="@dimen/x5"
                android:layout_marginTop="@dimen/y2"
                android:gravity="center"
                android:text="2013-22-12 32:33:32"
                android:textSize="11sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_trading_deal_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_weight="1"
            android:text="+98000004.44"
            android:textColor="@color/font_orange" />

        <TextView
            android:id="@+id/tv_item_trading_balance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginRight="@dimen/x5"
            android:layout_weight="0.9"
            android:paddingLeft="@dimen/x5"
            android:text="222.2223,22"
            android:textColor="@color/font_black" />
    </LinearLayout>

</LinearLayout>