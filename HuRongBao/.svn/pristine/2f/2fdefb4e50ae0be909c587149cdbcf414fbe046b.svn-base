<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/header_grey" />
    <!-- 登录密码修改 -->

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey_deep" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y40"
        android:layout_marginTop="@dimen/y10"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginRight="@dimen/x5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="原密码"
            android:textColor="@color/font_black" />


        <EditText
            android:id="@+id/et_login_pwd_change_old"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x8"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入原密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textColor="@color/font_black"
            android:textColorHint="@color/font_gray"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/ll_login_pwd_change_old"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/cb_login_pwd_change_old"
                android:layout_width="@dimen/y22"
                android:layout_height="@dimen/x18"
                android:layout_marginLeft="@dimen/x7"
                android:layout_marginRight="@dimen/x10"
                android:background="@drawable/login_check_box_eye_black"
                android:button="@null"
                android:clickable="false"
                android:paddingBottom="@dimen/x7"
                android:paddingTop="@dimen/x7" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y40"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginRight="@dimen/x5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="新密码"
            android:textColor="@color/font_black" />


        <EditText
            android:id="@+id/et_login_pwd_change_new"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x8"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textColor="@color/font_black"
            android:textColorHint="@color/font_gray"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/ll_login_pwd_change_new"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/cb_login_pwd_change_new"
                android:layout_width="@dimen/y22"
                android:layout_height="@dimen/x18"
                android:layout_marginLeft="@dimen/x7"
                android:layout_marginRight="@dimen/x10"
                android:background="@drawable/login_check_box_eye_black"
                android:button="@null"
                android:clickable="false"
                android:paddingBottom="@dimen/x7"
                android:paddingTop="@dimen/x7" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_login_pwd_change_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y40"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/y25"
        android:background="@drawable/shape_round_red_button"
        android:text="确认"
        android:textColor="@color/white" />

</LinearLayout>