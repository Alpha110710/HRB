<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/header_grey" />
    <!-- 手机号码修改 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey_deep" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y45"
        android:layout_marginTop="@dimen/y15"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x10"
            android:gravity="center_vertical"
            android:text="原手机验证码"
            android:textColor="@color/font_black" />


        <EditText
            android:id="@+id/et_reset_num_one_old"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x8"
            android:layout_weight="1"
            android:background="@null"
            android:cursorVisible="true"
            android:inputType="number"
            android:textColor="@color/font_black"
            android:textColorHint="@color/font_gray"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_reset_num_one_get_verify"
            android:layout_width="@dimen/x90"
            android:layout_height="@dimen/y20"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/x10"
            android:background="@drawable/shape_large_red_white"
            android:text="获取验证码"
            android:textColor="@color/red_light"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/y15"
        android:text="*6-20个字符 , 不能单独使用字母、数字或符号"
        android:textColor="@color/font_red"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_reset_num_one_go_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y40"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/y15"
        android:background="@drawable/shape_round_red_button"
        android:text="下一步"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_reset_num_one_old_cant_use"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/y20"
        android:text="原手机不可用 ? 点击这里"
        android:textColor="@color/red_light" />

</LinearLayout>