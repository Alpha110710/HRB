<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_news_iv"
            android:layout_width="@dimen/x80"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/y10"
            android:background="@drawable/empty_photo" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_news_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginTop="@dimen/y10"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="信用卡理财如何不把自己刷进去"
                android:textColor="@color/font_black" />

            <TextView
                android:id="@+id/item_news_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y10"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginTop="@dimen/y10"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="信用卡理财如何不把自己刷恒大华府就是发生纠纷后是否合适进去"
                android:textColor="@color/font_gray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grey_deep" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>