<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/header_grey" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey_deep" />

    <android.support.design.widget.TabLayout
        android:id="@+id/invest_detail_more_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y35"
        android:background="@color/white"
        app:tabIndicatorColor="@color/red_light"
        app:tabSelectedTextColor="@color/red_light"
        app:tabTextColor="@color/font_black" />

    <android.support.v4.view.ViewPager
        android:id="@+id/invest_detail_more_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <Button
            android:id="@+id/invest_detail_more_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y40"
            android:layout_marginBottom="@dimen/y10"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/y5"
            android:background="@drawable/shape_round_red_button"
            android:text="立即投资"
            android:textColor="@color/white" />

    </LinearLayout>
</LinearLayout>