<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y35"
        android:layout_marginTop="@dimen/y10"
        android:background="#F9F9F9"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:text="输入兑换码"
            android:textColor="@color/font_black" />

        <EditText
            android:id="@+id/et_red_unused_exchange"
            android:layout_width="0dp"
            android:layout_height="@dimen/y25"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入正确的兑换码"
            android:paddingLeft="@dimen/x5"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_red_unused_exchange"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x10"
            android:background="@color/red_light"
            android:gravity="center"
            android:paddingLeft="@dimen/x27"
            android:paddingRight="@dimen/x27"
            android:text="兑换"
            android:textColor="@color/white" />
    </LinearLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshListView xmlns:app="http://schemas.android.com/apk/res/com.wajr"
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/list_red_unused"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/y10"
        android:scrollbars="none"
        ptr:ptrAnimationStyle="flip"
        ptr:ptrMode="both"/>

</LinearLayout>