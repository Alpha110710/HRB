<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/header_red" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y45"
        android:layout_marginTop="@dimen/y10"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x10"
            android:gravity="center_vertical"
            android:text="新手机号"
            android:textColor="@color/font_black" />


        <EditText
            android:id="@+id/regist_tele_num_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x8"
            android:layout_weight="1"
            android:background="@null"
            android:cursorVisible="true"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:textColor="@color/font_black"
            android:textColorHint="@color/font_gray"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y45"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x10"
            android:gravity="center_vertical"
            android:text="登录密码"
            android:textColor="@color/font_black" />


        <EditText
            android:id="@+id/regist_pwd_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x8"
            android:layout_weight="1"
            android:background="@null"
            android:cursorVisible="true"
            android:hint="6-16为字母+数字组合"
            android:inputType="none"
            android:maxLength="11"
            android:textColor="@color/font_black"
            android:textColorHint="@color/font_gray"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y40"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x10"
            android:gravity="center_vertical"
            android:text="验证码"
            android:textColor="@color/font_black" />


        <EditText
            android:id="@+id/regist_verify_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x8"
            android:layout_weight="1"
            android:background="@null"
            android:cursorVisible="true"
            android:hint="请输入验证码"
            android:inputType="none"
            android:textColor="@color/font_black"
            android:textColorHint="@color/font_gray"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />

        <Button
            android:id="@+id/regist_verify_btn"
            android:layout_width="@dimen/x90"
            android:layout_height="@dimen/y20"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/x10"
            android:background="@drawable/shape_large_red_white"
            android:text="获取验证码"
            android:textColor="@color/red_light"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y15"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/y15"
        android:drawablePadding="@dimen/x10"
        android:drawableRight="@drawable/regist_03"
        android:text="推荐码"
        android:textColor="@color/red_light" />


    <EditText
        android:id="@+id/regist_tele_num_suggest_et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y40"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="请输入推荐人手机号"
        android:paddingLeft="@dimen/x10"
        android:textColorHint="@color/font_gray"
        android:textSize="14sp" />


    <Button
        android:id="@+id/regist_confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y40"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/y25"
        android:background="@drawable/shape_round_red_button"
        android:text="注册"
        android:textColor="@color/white" />

</LinearLayout>