<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/header_grey" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey_deep" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs_add_rate_coupon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y35"
        app:tabIndicatorColor="@color/font_black"
        app:tabSelectedTextColor="@color/red_light"
        app:tabTextColor="@color/red_light" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_add_rate_coupon"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


</LinearLayout>