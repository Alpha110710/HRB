<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/font_black"
    android:orientation="vertical">

    <include layout="@layout/header_grey" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey_deep" />

    <include
        android:id="@+id/my_bank_card_include"
        layout="@layout/include_my_bank_card"
        android:visibility="gone" />

    <include
        android:id="@+id/my_bank_card_had_include"
        layout="@layout/include_my_bank_card_had"
        android:visibility="gone" />


</LinearLayout>