<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/add_rule_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/y10"
            android:src="@drawable/my_red_packet_used_03" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y10"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/add_rule_tele_num_et"
                android:layout_width="0dp"
                android:layout_height="@dimen/y30"
                android:layout_marginLeft="@dimen/x20"
                android:layout_weight="1"
                android:background="@drawable/shape_gray_white"
                android:hint="请输入受赠人手机号"
                android:inputType="phone"
                android:paddingLeft="@dimen/x10"
                android:textColorHint="@color/font_gray"
                android:textSize="14sp" />

            <Button
                android:id="@+id/add_rule_tele_confirm"
                android:layout_width="@dimen/y60"
                android:layout_height="@dimen/x30"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:background="@drawable/shape_round_grey_button"
                android:clickable="false"
                android:enabled="false"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/y10"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/add_rule_name_gave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="受赠人姓名:李爽"
                    android:textColor="@color/font_black"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/add_rule_tele_num_gave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginTop="@dimen/y3"
                    android:text="受赠人手机号码:13878783278"
                    android:textColor="@color/font_black"
                    android:textSize="13sp" />

            </LinearLayout>

            <Button
                android:id="@+id/add_rule_give_confirm"
                android:layout_width="@dimen/y60"
                android:layout_height="@dimen/x30"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:background="@drawable/shape_round_red_button"
                android:text="确认赠送"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/y10"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    android:layout_marginTop="@dimen/y5"
                    android:text="加息券使用规则 :"
                    android:textColor="@color/font_black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/add_rule_content_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    android:layout_marginTop="@dimen/x10"
                    android:text=""
                    android:textColor="@color/font_black" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y50"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/add_rule_from_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x10"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/font_black"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y60"
        android:background="@color/font_black" />


</LinearLayout>