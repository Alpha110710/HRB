<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/header_grey" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey_deep" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y12"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/y12"
            android:text="用户名    "
            android:textColor="@color/font_black" />

        <TextView
            android:id="@+id/add_bank_card_user_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x10"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/font_gray" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y12"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/y12"
            android:text="所属银行"
            android:textColor="@color/font_black" />

        <TextView
            android:id="@+id/add_bank_card_bank_name_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_weight="1"
            android:drawableRight="@drawable/add_bank_card_07"
            android:gravity="center_vertical"
            android:text="工商银行"
            android:textColor="@color/font_gray" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y12"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/y12"
            android:text="所在地    "
            android:textColor="@color/font_black" />

        <TextView
            android:id="@+id/add_bank_card_province_name_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_weight="1"
            android:drawableRight="@drawable/add_bank_card_07"
            android:gravity="center_vertical"
            android:text="江苏省"
            android:textColor="@color/font_gray" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y12"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/y12"
            android:text="所在地    "
            android:textColor="@color/font_black"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/add_bank_card_city_name_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_weight="1"
            android:drawableRight="@drawable/add_bank_card_07"
            android:gravity="center_vertical"
            android:text="南京市"
            android:textColor="@color/font_gray" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x10"
            android:text="开户行分行名称"
            android:textColor="@color/font_black" />

        <EditText
            android:id="@+id/add_bank_card_fen_hang_et"
            android:layout_width="0dp"
            android:layout_height="@dimen/y15"
            android:layout_marginBottom="@dimen/y12"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/y12"
            android:layout_weight="1"
            android:background="@null"
            android:cursorVisible="true"
            android:gravity="center_vertical"
            android:inputType="none"
            android:textColor="@color/font_gray"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x10"
            android:text="开户行支行名称"
            android:textColor="@color/font_black" />

        <EditText
            android:id="@+id/add_bank_card_zhi_hang_et"
            android:layout_width="0dp"
            android:layout_height="@dimen/y15"
            android:layout_marginBottom="@dimen/y12"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/y12"
            android:layout_weight="1"
            android:background="@null"
            android:cursorVisible="true"
            android:gravity="center_vertical"
            android:inputType="none"
            android:textColor="@color/font_gray"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x10"
            android:text="银行账号           "
            android:textColor="@color/font_black" />

        <EditText
            android:id="@+id/add_bank_card_num_et"
            android:layout_width="0dp"
            android:layout_height="@dimen/y15"
            android:layout_marginBottom="@dimen/y12"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/y12"
            android:layout_weight="1"
            android:background="@null"
            android:cursorVisible="true"
            android:gravity="center_vertical"
            android:inputType="number"
            android:maxLength="19"
            android:textColor="@color/font_gray"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x10"
            android:text="银行预留手机号"
            android:textColor="@color/font_black" />

        <EditText
            android:id="@+id/add_bank_card_tele_num_et"
            android:layout_width="0dp"
            android:layout_height="@dimen/y15"
            android:layout_marginBottom="@dimen/y12"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/y12"
            android:layout_weight="1"
            android:background="@null"
            android:cursorVisible="true"
            android:gravity="center_vertical"
            android:inputType="phone"
            android:maxLength="11"
            android:textColor="@color/font_gray"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/transparent" />

    <Button
        android:id="@+id/add_bank_card_confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y40"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/y20"
        android:background="@drawable/shape_round_red_button"
        android:text="立即绑定"
        android:textColor="@color/white" />


</LinearLayout>