<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/header_grey" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey_deep"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y10"
        android:background="@color/white"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingBottom="@dimen/y15"
        android:paddingLeft="@dimen/x10"
        android:paddingTop="@dimen/y15"
        android:text="联系电话 : 400-669-0080"
        android:textColor="@color/font_black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/transparent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingBottom="@dimen/y15"
        android:paddingLeft="@dimen/x10"
        android:paddingTop="@dimen/y15"
        android:text="企业QQ : 235284875"
        android:textColor="@color/font_black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/transparent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingBottom="@dimen/y15"
        android:paddingLeft="@dimen/x10"
        android:paddingTop="@dimen/y15"
        android:text="企业邮箱 : hurongbao@0080.cn"
        android:textColor="@color/font_black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/y15"
            android:text="公司地址 : "
            android:textColor="@color/font_black" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y10"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/y15"
            android:layout_weight="1"
            android:lineSpacingMultiplier="1.3"
            android:text="江苏省南京市江宁区腾飞创造中心D座8楼"
            android:textColor="@color/font_black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/x140"
            android:layout_height="@dimen/y120"
            android:background="@drawable/foot_ewm_wx" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y10"
            android:text="关注微信服务号"
            android:textColor="@color/font_black" />
    </LinearLayout>

</LinearLayout>