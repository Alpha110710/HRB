<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y15"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:layout_weight="1"
                android:text="红包使用规则 :"
                android:textColor="@color/font_black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/red_rule_back_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginTop="@dimen/y10"
                android:src="@drawable/my_red_packet_used_03" />
        </LinearLayout>


        <TextView
            android:id="@+id/red_rule_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:text=""
            android:textColor="@color/font_black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y50"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/red_rule_from_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x10"
                android:layout_weight="1"
                android:text="来源 : "
                android:textColor="@color/font_black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/red_rule_exchange_tv"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/y30"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/x10"
                android:background="@drawable/shape_small_red_white"
                android:gravity="center"
                android:text="兑现"
                android:textColor="@color/red_light"
                android:textSize="18sp"
                android:visibility="invisible" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/font_black" />


</LinearLayout>